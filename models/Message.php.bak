<?php

namespace app\models;

use yii\behaviors\BlameableBehavior;
use yii\behaviors\TimestampBehavior;
use yii\db\ActiveRecord;

/**
 * Модель для таблицы Message
 *
 * @property string theme Тема сообщения
 * @property string text Текст Сообщения
 * @property int $id [int(6)]
 * @property int $id_user [int(11)]
 * @property int $created_time [timestamp]
 * @property string $last_edit [datetime]
 * @property string $user_name [varchar(255)]
 */
class Message extends ActiveRecord
{
    public function rules()
    {
        return [
            [['text'], 'required'],
            [['theme', 'text', 'user_name'], 'trim'],
            ['theme', 'string', 'max' => 128],
            ['text', 'string', 'min' => 3],
            ['user_name', 'string', 'max' => 255]
        ];
    }

    public function behaviors()
    {
        return [
            TimestampBehavior::class,
            [
                'class' => BlameableBehavior::class,
                'updatedByAttribute' => false
            ]
        ];
    }

    public function attributeLabels()
    {
        return [
            'theme' => 'Тема',
            'text' => 'Текст',
            'user_name' => 'Имя'
        ];
    }
}